<Window x:Class="Project.Calculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="String Displayer" Height="200" Width="400">
    <TabControl SelectionChanged="Tab_Change">
        <TabItem Header="Input">
            <DockPanel LastChildFill="False">
                <StackPanel Margin="20" DockPanel.Dock="Top">
                    <TextBlock Text ="Input an equation!" TextWrapping="Wrap"/>
                    <TextBox x:Name ="InputBox" Margin="0,5,0,10" TextChanged="InputBox_Change" TextWrapping="Wrap"/>
                    <TextBlock x:Name="OutputText" Margin="0,10,0,0" TextWrapping="Wrap"/>
                </StackPanel>
                <Button DockPanel.Dock="Left" x:Name="Button_Exit" Height="20" Width="40" Margin="20,0,0,0" Content="Exit" Click="Button_Exit_Click"/>
            </DockPanel>
        </TabItem>

        <TabItem Header="History">
            <TextBlock x:Name="HistoryText" Margin="5,10,5,10" Text=""/>
        </TabItem>
    </TabControl>
</Window>